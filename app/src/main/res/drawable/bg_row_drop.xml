<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/bg_row_drop_dark" />
        </shape>
    </item>
    <!-- state pressed item should always be above the normal item otherwise the normal item will be triggered under every circumstance -->
    <item>
        <shape>
            <solid android:color="@color/bg_row_drop_light" />
        </shape>
    </item>
</selector>